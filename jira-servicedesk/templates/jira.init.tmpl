#!/bin/sh
### BEGIN INIT INFO
# Provides:          jira
# Required-Start:    $local_fs $remote_fs $network $syslog $named
# Required-Stop:     $local_fs $remote_fs $network $syslog $named
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# X-Interactive:     true
# Short-Description: Start/stop jira server
### END INIT INFO

set -e


# Define some variables
# Name of app ( JIRA, Confluence, etc )
APP=jira
# Name of the user to run as
USER={{ jira.user }}
# Location of application's bin directory
BASE={{ jira.prefix }}/jira
# Location of Java JDK
#export JAVA_HOME=/usr/lib/jvm/java-6-sun
#export CATALINA_OUT={{ jira.log_root }}/catalina.out

export JIRA_HOME='{{ jira.home }}'

case "$1" in
  start)
    echo "Starting $APP"
    /bin/su -l $USER -c "cd $BASE/logs && $BASE/bin/startup.sh"
    echo "$APP started successfully"
    sleep 30
    ;;
  stop)
    echo "Stopping $APP"
    /bin/su -l $USER -c "$BASE/bin/shutdown.sh"
    echo "$APP stopped successfully"
    sleep 30
    ;;
  restart)
    $0 stop
    sleep 2
    $0 start
    ;;
  status)
    if pgrep -F $BASE/work/catalina.pid >/dev/null 2>&1 ; then
      echo "$APP is running."
      exit 0;
    else
      echo "$APP is stopped."
      exit 1;
    fi
    ;;   
  *)
    echo "Usage: /etc/init.d/$APP {start|restart|stop|status}"
    exit 1
    ;;
esac
 
exit 0



